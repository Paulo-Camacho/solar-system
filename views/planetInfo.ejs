<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partials/head.ejs") %>
</head>

<body>
    <%- include("partials/nav.ejs") %>

    <h1 class="planet-title"><%= planetName %></h1>

    <div class="planet-container">
        <div class="planet-text">

            <% if (planetInfo.distanceFromSun) { %>
                <h3>Distance From Sun</h3>
                <p><%= planetInfo.distanceFromSun %></p>
            <% } %>

            <% if (planetInfo.yearLength) { %>
                <h3>Year Length</h3>
                <p><%= planetInfo.yearLength %></p>
            <% } %>

            <% if (planetInfo.radius) { %>
                <h3>Radius</h3>
                <p><%= planetInfo.radius %></p>
            <% } %>

            <% if (planetInfo.oneEarthDay) { %>
                <h3>One Earth Day</h3>
                <p><%= planetInfo.oneEarthDay %></p>
            <% } %>

            <% if (planetInfo.moons) { %>
                <h3>Moons</h3>
                <p><%= planetInfo.moons %></p>
            <% } %>

            <% if (planetInfo.description || planetInfo.def) { %>
                <h3>Description</h3>
                <p><%= planetInfo.description ? planetInfo.description : planetInfo.def %></p>
            <% } %>

            <% if (planetInfo.websiteLink || planetInfo.link) { %>
                <h3>Website Link</h3>
                <p>
                    <a href="<%= planetInfo.websiteLink ? planetInfo.websiteLink : planetInfo.link %>" target="_blank">
                        Learn More
                    </a>
                </p>
            <% } %>

        </div>

        <% if (planetInfo.image) { %>
            <div>
                <img class="planet-image" src="<%= planetInfo.image %>" alt="<%= planetName %> image">
            </div>
        <% } %>
    </div>

    <%- include("partials/footer.ejs") %>

</body>

</html>
